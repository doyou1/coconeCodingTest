package cocone;

import java.util.LinkedList;

import cocone.Graph.Node;

class Graph{
	class Node{
		int data;
		LinkedList<Node> adjacent;
		boolean marked;
		Node(int data){
			this.data = data;
			this.marked = false;
			adjacent = new LinkedList<Node>();
		}
	}
	
	Node[] nodes;
	Graph(int size){
		nodes = new Node[size+1];
		for(int i = 1; i <= size; i++) {
			nodes[i] = new Node(i);
		}
	}
	
	void addEdge(int i1, int i2) {
		Node n1 = nodes[i1];
		Node n2 = nodes[i2];
		
		if(!n1.adjacent.contains(n2)) {
			n1.adjacent.add(n2);
		}
		if(!n2.adjacent.contains(n1)) {
			n2.adjacent.add(n1);
		}
	}
}


public class GraphSolution1 {

	public static void main(String[] args) {
		int n = 6;
		int[][] vertex = {{3,6},{4,3},{3,2},{1,3},{1,2},{2,4},{5,2}};
		
		GraphSolution1 s1 = new GraphSolution1();
		s1.solution(n, vertex);
	}
	
	public int solution(int n, int[][] vertex) {
		int result = 0;
		
		Graph graph = new Graph(n);
		
		for(int[] v : vertex) {
			graph.addEdge(v[0], v[1]);
		}
		
		for(Node node : graph.nodes) {
			if(node != null) {
				System.out.println(node.data);
			}
			if(node.adjacent != null) {
				for(Node ad : node.adjacent) {
					if(ad != null) {
						System.out.println(ad.data);						
					}
				}
			}
		}
		
		return result;
	}
	
	public int dfs(
			int x
			, int[][] vertex
			, int length
			, int cnt) {
		
		if(x != 1 && length == 0) {
			System.out.println("³¡ : " + x);
			return 1;
		}
		length = 0;
		System.out.println("x : " + x);
		for(int[] v : vertex) {
			if(v[0] == x) {
				dfs(v[1],vertex, length++, cnt++);		
			}
		}
		
		return 1;
	}
}
